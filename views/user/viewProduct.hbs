<!-- single product -->
<div class="single-product mt-150 mb-50">
    <div class="mb-150" style="margin: 10rem;">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">CheckOut</span> This Product</h3>
                    <p><b>The Best Of Nature Straight From Farms</b></p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="">
                    <div class="col-md-">
                        <div class="product-image-carousel">
                            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#product-carousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#product-carousel" data-slide-to="1"></li>
                                    <li data-target="#product-carousel" data-slide-to="2"></li>
                                </ol>

                                <!-- Slides -->
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="/product-images/{{products.images.[0]}}"
                                            class="d-block w-100" alt="Image">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/product-images/{{products.images.[1]}}"
                                            class="d-block w-100" alt="Image">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="/product-images/{{products.images.[2]}}"
                                            class="d-block w-100" alt="Image">
                                    </div>
                                </div>

                                <!-- Controls -->
                                <a class="carousel-control-prev" href="#product-carousel"
                                    role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#product-carousel"
                                    role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <style>
                            .product-image-carousel .carousel-inner .carousel-item img {
                                max-height: 400px;
                                object-fit: cover;
                            }
                        </style>
                    </div>
                    <div class="row px-xl-">
                        <div class="col-lg-5 mb-30" style="margin-left: 12rem; margin-top: 5rem;">
                            <div id="" class="">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <img class="thumbnail-img" src="/product-images/{{products.images.[0]}}"
                                            alt="Image">
                                    </div>
                                    <div class="col-lg-4">
                                        <img class="thumbnail-img" src="/product-images/{{products.images.[1]}}"
                                            alt="Image">
                                    </div>
                                    <div class="col-lg-4">
                                        <img class="thumbnail-img" src="/product-images/{{products.images.[2]}}"
                                            alt="Image">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <style>
                        .thumbnail-img {
                            width: 100%;
                            height: auto;
                        }
                    </style>
                </div>
            </div>
            <div class="col-md-6">
                <div class="single-product-content">
                    <h3>{{products.Name}}</h3>
                    <p class="product-price"><span>Per Kg</span><s>Rs.{{products.Price}}</s></p>
                    <p><b><h3>Rs.{{products.Offerprice}}</h3></b></p>
                    <p><b>Category:</b>{{products.category}}</p>
                    <p><b>Stocks Left:</b>{{products.Quantity}}</p>
                    <p>{{products.Description}}</p>
                    <div class="single-product-form">
                        <form action="index.html">
                            <input type="number" placeholder="0">
                        </form>
                        <div class="d-grid gap-2 d-md-block">
                            <button onclick="addToCart('{{products._id}}')" type="button" class="btn btn-success">Add To Cart</button>
                        </div>
                        <div class="d-grid gap-2 d-md-block mt-2 mb-2">
                            <button onclick="addToWishlist('{{products._id}}')" class="btn btn-info px-3">
                                <i class="fa fa-heart mr-1" id="{{products._id}}"></i>Add To wishlist</button>
                        </div>
                        <p><strong>Categories: </strong>{{products.category}}</p>
                    </div>
                    <h4>Share:</h4>
                    <ul class="product-share">
                        <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href=""><i class="fab fa-twitter"></i></a></li>
                        <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end single product -->
