<script>
    function deleteAddress(event) {
        event.preventDefault();

        var link = event.currentTarget.href;
        var addressId = link.split('/').pop(); // Extract the address ID from the URL

        $.ajax({
            url: '/deleteAddrsess/' + addressId,
            method: 'get',
            success: function (response) {
                if (response.status) {
                    Swal.fire({
                        title: 'Address deleted!',
                        text: 'Your address has been deleted successfully.',
                        icon: 'success'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to delete address.',
                        icon: 'error'
                    });
                }
            },
            error: function (xhr, status, error) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Failed to delete address.',
                    icon: 'error'
                });
            }
        });
    }
</script>
