<div class="container-fluid  bg-secondary" style="background-color: #3c4142;">

    <div class="row">
        <div class="col-12">
            <div class="card card-margin">
                <div class="card-body">
                    <div class="row search-body">
                        <div class="col-lg-12">
                            <div class="search-result">
                                <div class="result-header">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="records">Showing: <b>1-3</b> of
                                                <b>{{this.result.totalCount}}</b> result</div>
                                        </div>


                                        <div class="col-lg-6">

                                            <div class="result-actions">

                                                <div class="result-sorting">
                                                    <form id="sort-form" method="post" action="/sort">
                                                        <span>Filter By Categoty:</span>
                                                        <select class="form-control border-0" id="sort-select"
                                                            name="selectedValue" onchange="this.form.submit()">
                                                            <option value="2">Select</option>
                                                            <option value="price-low-to-high">
                                                                <a href="#">Price: Low to High</a>
                                                            </option>

                                                            <option value="price-high-to-low">
                                                                <a href="#">Price: High to Low</a>
                                                            </option>
                                                            <option value="2">Names (A-Z)</option>
                                                            <option value="3">Names (Z-A)</option>
                                                        </select>
                                                    </form>
                                                </div>

                                                <div class="result-views">
                                                    <button type="button" class="btn btn-soft-base btn-icon">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                            viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                            stroke-width="2" stroke-linecap="round"
                                                            stroke-linejoin="round" class="feather feather-list">
                                                            <line x1="8" y1="6" x2="21" y2="6"></line>
                                                            <line x1="8" y1="12" x2="21" y2="12"></line>
                                                            <line x1="8" y1="18" x2="21" y2="18"></line>
                                                            <line x1="3" y1="6" x2="3" y2="6"></line>
                                                            <line x1="3" y1="12" x2="3" y2="12"></line>
                                                            <line x1="3" y1="18" x2="3" y2="18"></line>
                                                        </svg>
                                                    </button>
                                                    <button type="button" class="btn btn-soft-base btn-icon">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                            viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                            stroke-width="2" stroke-linecap="round"
                                                            stroke-linejoin="round" class="feather feather-grid">
                                                            <rect x="3" y="3" width="7" height="7"></rect>
                                                            <rect x="14" y="3" width="7" height="7"></rect>
                                                            <rect x="14" y="14" width="7" height="7"></rect>
                                                            <rect x="3" y="14" width="7" height="7"></rect>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">

                                    {{#each data}}
                                    <div class="col-lg-4 col-md-6 text-center lemon" id="product-list">
                                        <div class="single-product-item">
                                            <div class="product-image">
                                                <a href="/view-products/{{this._id}}">
                                                    <img class="lazyload" src="/product-images/{{this.images.[0]}}"
                                                        alt="" /></a>
                                            </div>
                                            <h3 class="orange-text">{{this.Name}}</h3>
                                            <p class="card-text product-price">
                                                <span class="text-danger">Per Kg</span>
                                                <s><i class="text-muted">Rs.{{this.Price}}</i></s>
                                                <b><i class="text-success">Rs.{{this.Offerprice}}</i></b>
                                            </p>
                                            <p class="card-text"><b class="text-danger">Stocks Left:
                                                    {{this.Quantity}}</b></p>

                                            <div class="d-grid gap-2 d-md-block">
                                                <button onclick="addToCart('{{this._id}}')" type="button"
                                                    class="btn btn-sm btn-success">Add To Cart</button>
                                                <button onclick="addToWishlist('{{this._id}}')" type="button"
                                                    class="btn btn-sm btn-success">Add To Wishlist</button>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <nav class="d-flex justify-content-center">
                        <form method="post" action="/sort">
                            <ul class="pagination">
                                <li class="page-item"><button type="submit" name="page" value="1"
                                        class="page-link no-border ">1</button></li>
                                <li class="page-item"><button type="submit" name="page" value="2"
                                        class="page-link no-border">2</button></li>
                                <li class="page-item"><button type="submit" name="page" value="3"
                                        class="page-link no-border">3</button></li>
                            </ul>
                        </form>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


