<section>
    <div class="container" style="margin: 20rem; margin-top: 8rem;">
        <div class="row">
            <div class="col-md-6 justify-content-center">
                <h2>Edit Banner</h2>
                <form action="/admin/edit-coupon" method="post">
                    <input type="text" value="{{coupon._id}}" name="id" hidden>
                    <label for="coupon">Banner Name</label>
                    <input type="text" id="coupon" name="coupon" onkeyup="validateCoupon()" value="{{bannerDetails.name}}" class="form-control">
                     <div id="couponError"></div>

                    <label for="starting">Sub Name: </label>
                    <input type="text" id="startDate" name="starting" value="{{bannerDetails.suBname}}" class="form-control">
                     <div id="startDateError"></div>
 
                    <label for="expiry">Offer: </label>
                    <input type="text" id="endDate" name="expiry" value="{{bannerDetails.offer}}" class="form-control">
                     <div id="endDateError"></div>

                    <label for="offer">Image: </label>
                    <img class="" style="width:100px; height:100px;margin: 2rem;" src="/product-images/{{bannerDetails.images.[0]}} " alt="Image">
                    <div id="offerError"></div>

                    <button type="submit" class="btn btn-success mt-4">submit</button>
                </form>
            </div>
        </div>
    </div>
</section>


{{!-- date validation --}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        let today = new Date()
        var dd = today.getDate();
        var mm = today.getMonth() + 1;
        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        today = yyyy + '-' + mm + '-' + dd;
        $('#startDate').attr('min', today)
        $('#startDate').change(function () {
            let date = document.getElementById('startDate').value
            $('#endDate').attr('min', date)
        })
    })
</script>

