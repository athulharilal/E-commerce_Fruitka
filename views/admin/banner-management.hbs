<section>
  <div class="container-fluid" style="padding: 10%; margin-left: 8%; margin-top: rem;">
    <div class="px-xl-5 pt-5">
      <div>
        <div class="row justify-content-end d-flex">
          <div class="mb-3">
            <a href="/admin/add-banner" class="btn btn-info">Add banner</a>
          </div>
        </div>
        {{#if allbanners.length}}
        <div class="table-responsive mb-5">
          <table class="table text-center" id="myTable">
            <thead class="thead-light">
              <tr>
                <th scope="col">No</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">sub-name</th>
                <th scope="col">offer</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each allbanners}}
              <tr>
                <th scope="row" class="fs-bold">{{inc @index}}</th>
                <td><img style="height: 50px;width:50px;" src="/product-images/{{this.images.[0]}}" alt=""></td>
                <td>{{this.name}}</td>
                <td>{{this.suBname}}</td>
                <td>{{this.offer}}&nbsp;%</td>
                <td><a href="/admin/edit-banner/{{this._id}}"><i class="fa fa-edit fa-2x text-dark"
                      aria-hidden="true"></i></a></td>
                <td><a href="/admin/delete-banner/{{this._id}}"><i class="fa fa-trash fa-2x text-dark"
                      aria-hidden="true" onclick="return confirm('Are you sure want to Delete {{this.name}} banner')"></i></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{else}}
        <p>No banners available.</p>
        {{/if}}
      </div>
    </div>
  </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
