{{! list of all products in the database }}

<div class="container" style="margin: 17rem; margin-top: 10rem;">
  <div class="row">
    <a href="/admin/add-product" class="btn btn-success ml-auto mt-2">Add
      Products</a>
  </div>
  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Offer-Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Category</th>
        <th scope="col">Image</th>

      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{inc @index}}</td>
        <td>{{this.Name}}</td>
        <td>{{this.Price}}</td>
        <td>{{this.Offerprice}}</td>
        <td>{{this.Quantity}}</td>
        <td>{{this.category}}</td>
        <td><img style="width:50px; height:50px" src="/product-images/{{this.images.[0]}}" alt="" /></td>
        <td><a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">EDIT</a></td>
        <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
            onclick=" return confirm('Do you want to delete{{this.Name}}')">Delete</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.0/css/jquery.dataTables.min.css">

<script>
 $(document).ready(function() {
  // Initialize the datatable
  $('#productTable').DataTable();
 })
 </script>