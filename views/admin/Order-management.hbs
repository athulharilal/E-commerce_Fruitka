<div class="mt-5" style="margin: 17rem; margin-top: 8rem;">
    <div class="row">
      <div class="text-center">
        <div class="">
          <p></p>
          <h2>Order Management</h2>
        </div>
        <hr>
      </div>
    </div>
  <div class="container">
    <div class="shadow rounded p-3 text-center">
      {{#if allOrders.length}}
      <div class="table-responsive">
        <table class="table" id="orderTable">
          <thead class="thead-dark">
            <tr>
              <th class="align-middle text-center">No</th>
              <th class="align-middle text-center">Date</th>
              <th class="align-middle text-center">UserName</th>
              <th class="align-middle text-center">Email</th>
              <th class="align-middle text-center">Contactno.</th>
              <th class="align-middle text-center">Delivery Address</th>
              <th class="align-middle text-center">Billing Address</th>
              <th class="align-middle text-center">Amount</th>
              <th class="align-middle text-center">Payment</th>
              <th class="align-middle text-center">Status</th>
              <th class="align-middle text-center">Options</th>
              <th class="align-middle text-center">Products</th>
            </tr>
          </thead>
          <tbody>
            {{#each allOrders}}
            <tr>
              <td class="align-middle text-center">{{inc @index}}</td>
              <td class="align-middle text-center">{{this.date}}</td>
              <td class="align-middle text-center">{{this.user.Name}}</td>
              <td class="align-middle text-center">{{this.user.Email}}</td>
              <td class="align-middle text-center">{{this.user.Number}}</td>
              <td>
                <table class="table table-bordered">
                  <tr>
                    <td class="align-middle text-center">Name:</td>
                    <td class="align-middle text-center">{{this.deliveryDetails.name}}</td>
                  </tr>
                  <tr>
                    <td class="align-middle text-center">PIN:</td>
                    <td class="align-middle text-center">{{this.deliveryDetails.pincode}}</td>
                  </tr>
                  <tr>
                    <td class="align-middle text-center">Mobile:</td>
                    <td class="align-middle text-center">{{this.deliveryDetails.mobile}}</td>
                  </tr>
                  <tr>
                    <td class="align-middle text-center">Town:</td>
                    <td class="align-middle text-center">{{this.deliveryDetails.town}}</td>
                  </tr>
                  <tr>
                    <td class="align-middle text-center">State:</td>
                    <td class="align-middle text-center">{{this.deliveryDetails.state}}</td>
                  </tr>
                </table>
              </td>
              <td class="align-middle text-center">{{this.billingaddress}}</td>
              <td class="align-middle text-center">Rs.{{this.totalAmount}}</td>
              <td class="align-middle text-center">{{this.PaymentMethod}}</td>
              <td class="align-middle text-center">{{this.status}}</td>
              <td>
                {{#if this.is_Cancelled}}
                <p class="text-danger font-weight-bold text-center">Cancelled Successfully</p>
                {{else}}
                {{#if this.is_delivered}}
                <p class="text-success font-weight-bold text-center">Delivered Successfully</p>
                {{else}}
                <form action="/admin/change-order-status" method="post" id="orderStatusForm">
                  <input type="text" name="OrderId" value="{{this._id}}" hidden>
                  <select name="status" class="form-select" aria-label="Default select example" onchange="submitForm()">
                    <option selected>select status</option>
                    <option value="Shipped">shipped</option>
                    <option value="Delivered">Delivered</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="Placed">placed</option>
                    <option value="Pending">Pending</option>
                  </select>
                  <input type="text" name="user" value="{{../this._id}}" hidden>
                </form>
                {{/if}}
                {{/if}}
              </td>
              <td>
                <a class="btn btn-dark" href="/admin/view-order-products/{{this._id}}">
                  <i class="fa fa-eye" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <p class="text-center">No orders found.</p>
      {{/if}}
    </div>
  </div>
</div>

<script>
  function submitForm() {
    document.getElementById('orderStatusForm').submit();
  }
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
